{% extends 'base.html.twig' %}

{% block title %}Modifier le message{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier le message</h1>

    {% include 'partials/_alert.html.twig' %}

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        {{ form_row(form.content) }}
        {{ form_row(form.image) }}

        {% if message.image %}
            <div class="mt-3">
                <p>Image actuelle :</p>
                <img src="{{ asset('uploads/messages/' ~ message.image) }}"
                     alt="Image actuelle"
                     class="img-fluid rounded shadow-sm" style="max-height:250px;">
            </div>
        {% endif %}

        <button class="btn btn-primary mt-3">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Annuler</a>
</div>
{% endblock %}
