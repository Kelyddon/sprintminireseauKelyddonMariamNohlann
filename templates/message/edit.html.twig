{% extends 'base.html.twig' %}

{% block title %}Modifier le message{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier le message</h1>

    {% for label, messages_flash in app.flashes %}
        {% for message_flash in messages_flash %}
            <div class="alert alert-{{ label }}">{{ message_flash }}</div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}
        {{ form_row(form.content) }}
        {# {{ form_row(form.image) }} #}
        <button class="btn btn-primary mt-3">Enregistrer les modifications</button>
    {{ form_end(form) }}

    <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Annuler</a>
</div>
{% endblock %}
