{% extends 'base.html.twig' %}
 
{% block title %}Message de {{ message.author.username ?? message.author.email ?? 'Anonyme' }}{% endblock %}
 
{% block body %}
<div class="max-w-4xl mx-auto mt-8 px-4 sm:px-6 lg:px-8">
 
    <!-- Carte du message -->
    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm p-4 transition-colors duration-300">
        <div class="flex flex-col sm:flex-row justify-between mb-4 gap-4">
            <div class="flex items-center space-x-3">
                <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center text-white font-semibold text-lg">
                    {% set author = message.author ?? message.user ?? null %}
                    {{ (author ? (author.username ?? author.email ?? 'A') : 'A')|slice(0, 1)|upper }}
                </div>
                <div>
                    <strong class="text-gray-900 dark:text-gray-100 block">
                        {{ author ? (author.username ?? author.email ?? 'Anonyme') : 'Anonyme' }}
                    </strong>
                    <small class="text-gray-500 dark:text-gray-300 text-sm">
                        {% if message.createdAt is defined and message.createdAt %}
                            {{ message.createdAt|date('d/m/Y H:i') }}
                        {% endif %}
                    </small>
                </div>
            </div>
 
    <p class="text-gray-700 dark:text-gray-200 mb-3">{{ message.content }}</p>
 
        {% if message.image is defined and message.image %}
            <hr class="my-3">
            <div class="text-center">
                <img src="{{ asset('uploads/messages/' ~ message.image) }}"
                     alt="Image du message"
                     class="max-h-96 w-full object-cover rounded shadow-sm mt-2 bg-gray-100 dark:bg-gray-900">
            </div>
        {% endif %}
    </div>
 
    <!-- Actions -->
    <div class="mt-3 flex flex-wrap gap-2">
        <a href="{{ path('app_home') }}" class="text-gray-600 hover:text-[#8a3ab9] text-sm">← Retour</a>
 
        {% if app.user and app.user == message.author %}
            <a href="{{ path('app_message_edit', { id: message.id }) }}"
               class="bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1 rounded text-sm transition-colors duration-200">
                Modifier
            </a>
        {% endif %}
 
        {% if app.user and (is_granted('ROLE_ADMIN') or app.user == message.author) %}
            <form method="post"
                  action="{{ path('app_message_delete', { id: message.id }) }}"
                  onsubmit="return confirm('Supprimer ce message ?');">
                <button class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm transition-colors duration-200">
                    Supprimer
                </button>
            </form>
        {% endif %}
    </div>
 
    <hr class="my-6 border-gray-200">
 
    <!-- Commentaires -->
    <div>
    <h5 class="text-gray-900 dark:text-gray-100 font-semibold mb-4">Commentaires ({{ message.comments|length }})</h5>
 
        {% for comment in message.comments %}
            <div class="bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg p-3 mb-2 transition-colors duration-300">
                <div class="flex justify-between items-start">
                    <div>
                        <strong class="text-gray-900 dark:text-gray-100">
                            {% set cAuthor = comment.author ?? null %}
                            {{ cAuthor ? (cAuthor.username ?? cAuthor.email ?? 'Anonyme') : 'Anonyme' }}
                        </strong>
                        <span class="text-gray-500 dark:text-gray-300 text-sm">• {{ comment.createdAt ? comment.createdAt|date('d/m/Y H:i') : '' }}</span>
                    </div>
 
                    {% if app.user and (is_granted('ROLE_ADMIN') or (comment.author and comment.author.id == app.user.id)) %}
                        <form method="post"
                              action="{{ path('app_comment_delete', { id: comment.id }) }}"
                              onsubmit="return confirm('Supprimer ce commentaire ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_comment_' ~ comment.id) }}">
                            <button class="bg-red-500 hover:bg-red-600 text-white text-xs px-2 py-1 rounded transition-colors duration-200">
                                Supprimer
                            </button>
                        </form>
                    {% endif %}
                </div>
 
                <div class="mt-2 text-gray-700 dark:text-gray-200">
                    {{ comment.content }}
                </div>
            </div>
        {% else %}
            <p class="text-gray-500">Aucun commentaire pour le moment.</p>
        {% endfor %}
    </div>
 
    <!-- Formulaire d’ajout de commentaire -->
    <div class="mt-6">
            <form method="post" action="{{ path('app_comment_add', { id: message.id }) }}">
                <div class="mb-3">
                    <label for="comment_content" class="block text-gray-700 font-medium mb-1">Nouveau commentaire</label>
                    <textarea id="comment_content" name="content" rows="3" required
                              class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#8a3ab9] focus:border-[#8a3ab9] text-gray-700"></textarea>
                </div>
                <input type="hidden" name="_token" value="{{ csrf_token('comment_add_' ~ message.id) }}">
                <button type="submit" class="bg-[#8a3ab9] hover:bg-[#bc2a8d] text-white px-4 py-2 rounded transition-colors duration-200">
                    Publier
                </button>
            </form>
    </div>
 
</div>
{% endblock %}