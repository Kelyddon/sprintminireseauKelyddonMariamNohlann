{% extends 'base.html.twig' %}

{% block title %}Cr√©er un message{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto mt-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <div class="p-6 md:p-8">
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
                    <i class="fas fa-edit mr-2"></i>Nouveau message
                </h1>
                <a href="{{ path('app_home') }}"
                   class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors duration-200">
                    <i class="fas fa-times"></i>
                </a>
            </div>

            {% include 'partials/_alert.html.twig' %}

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                {{ form_label(form.content, 'Contenu', {'label_attr': {'class': 'block text-gray-700 dark:text-gray-200 font-medium mb-2'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded focus:outline-none focus:ring-2 focus:ring-[#8a3ab9] focus:border-[#8a3ab9] text-gray-700 dark:text-gray-100 bg-white dark:bg-gray-900'}}) }}
                {{ form_errors(form.content) }}
            </div>

            <div>
                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'block text-gray-700 dark:text-gray-200 font-medium mb-2'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'w-full bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-100 border border-gray-300 dark:border-gray-700 rounded'}}) }}
                {{ form_errors(form.image) }}
            </div>

            <div class="flex flex-col sm:flex-row gap-3 mt-6">
                <button type="submit"
                        class="w-full sm:w-auto bg-[#8a3ab9] hover:bg-[#bc2a8d] text-white px-6 py-2.5 rounded-lg font-medium transition-colors duration-200 flex items-center justify-center gap-2">
                    <i class="fas fa-paper-plane"></i>
                    <span>Publier</span>
                </button>
                <a href="{{ path('app_home') }}"
                   class="w-full sm:w-auto border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700 px-6 py-2.5 rounded-lg font-medium transition-colors duration-200 text-center">
                    Annuler
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}