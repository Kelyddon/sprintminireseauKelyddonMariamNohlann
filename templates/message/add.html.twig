{% extends 'base.html.twig' %}

{% block title %}Créer un message{% endblock %}

{% block body %}
<div class="container mt-4" style="max-width:720px;">
    <h1 class="mb-4">Créer un message</h1>

    {% include 'partials/_alert.html.twig' %}

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        {{ form_row(form.content) }}
        {{ form_row(form.image) }}
        <button class="btn btn-primary mt-2">Publier</button>
        <a href="{{ path('app_home') }}" class="btn btn-link">Annuler</a>
    {{ form_end(form) }}
</div>
{% endblock %}
