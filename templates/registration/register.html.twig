{% extends 'base.html.twig' %}
 
{% block title %}Inscription{% endblock %}
 
{% block body %}
<div class="max-w-2xl mx-auto mt-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <div class="p-8 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
                    <i class="fas fa-user-plus mr-2"></i>Créer un compte
                </h1>
            </div>
            {% include 'partials/_alert.html.twig' ignore missing %}
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-600 focus:border-primary-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 shadow-sm transition-colors duration-200'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
                <div>
                    {{ form_label(registrationForm.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1'}}) }}
                    {{ form_widget(registrationForm.username, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-600 focus:border-primary-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 shadow-sm transition-colors duration-200'}}) }}
                    {{ form_errors(registrationForm.username) }}
                </div>
                <div>
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-600 focus:border-primary-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 shadow-sm transition-colors duration-200'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
                <div class="pt-4">
                    <button type="submit" class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                        <i class="fas fa-user-plus"></i>
                        S'inscrire
                    </button>
                </div>
            {{ form_end(registrationForm) }}
            <p class="text-center text-sm text-gray-600 dark:text-gray-300 mt-6">
                Déjà un compte ?
                <a href="{{ path('app_login') }}" class="text-primary-600 dark:text-primary-400 hover:underline">Connexion</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}